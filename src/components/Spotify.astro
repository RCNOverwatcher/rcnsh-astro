---
import { Cloudinary } from "@cloudinary/url-gen";
import { PauseIcon, PlayIcon } from "astro-feather";
import { GET } from "../pages/api/nowPlaying";
import Image from "astro/components/Image.astro";
Astro.response.headers.set(
  "Cache-Control",
  "s-maxage=1, stale-while-revalidate",
);

interface songData {
  isPlaying: boolean;
  title: string;
  artist: string;
  album: string;
  albumImageUrl: string;
  songUrl: string;
}

const reponse = await GET(Astro);
const song = (await reponse.json()) as songData;

const cld = new Cloudinary({
  cloud: {
    cloudName: "dtqhs8nvm",
  },
});

const cldSrc = cld
  .image(song.albumImageUrl)
  .setDeliveryType("fetch")
  .format("webp");
---

<section
  class="bg-black/20 rounded-lg animate-gradient-x bg-gradient-to-br from-slate-700 to-black"
  id="spotify-background"
  transition:persist
>
  <a
    target="_blank"
    rel="noopener noreferer"
    href={song.isPlaying
      ? song.songUrl
      : "https://open.spotify.com/user/nz3i2a30ep85rv5ymcpglhndj"}
    class="relative m-auto flex w-72 items-center space-x-4 rounded-md p-5 transition-shadow hover:shadow-md"
  >
    <div class="w-16">
      {
        song.album ? (
          <img
            class="w-16 shadow-sm"
            src={cldSrc.toURL()}
            alt={song.album}
            width={64}
            height={64}
            loading={"eager"}
            id={"spotify-image"}
          />
        ) : (
          <svg
            stroke="currentColor"
            fill="currentColor"
            stroke-width="0"
            role="img"
            viewBox="0 0 24 24"
            color="#1ED760"
            height="64"
            width="64"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z" />
          </svg>
        )
      }
    </div>
    <div class="flex-1">
      <p class="component font-bold text-[#cdc8c2]">
        {song.title ? song.title : "Not Listening"}
      </p>
      <p class="font-dark text-xs text-[#cdc8c2]">
        {song.artist ? song.artist : "Spotify"}
      </p>
    </div>
    <div class="flex float-end">
      {
        song.isPlaying ? (
          <PauseIcon size={24} stroke="#cdc8c2" />
        ) : (
          <PlayIcon size={24} stroke="#cdc8c2" />
        )
      }
    </div>
    <div class="absolute bottom-1.5 right-1.5">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 496 512" width="24" height="24">
        <path fill="#1ed760" d="M248 8C111.1 8 0 119.1 0 256s111.1 248 248 248 248-111.1 248-248S384.9 8 248 8Z"/>
        <path d="M406.6 231.1c-5.2 0-8.4-1.3-12.9-3.9-71.2-42.5-198.5-52.7-280.9-29.7-3.6 1-8.1 2.6-12.9 2.6-13.2 0-23.3-10.3-23.3-23.6 0-13.6 8.4-21.3 17.4-23.9 35.2-10.3 74.6-15.2 117.5-15.2 73 0 149.5 15.2 205.4 47.8 7.8 4.5 12.9 10.7 12.9 22.6 0 13.6-11 23.3-23.2 23.3zm-31 76.2c-5.2 0-8.7-2.3-12.3-4.2-62.5-37-155.7-51.9-238.6-29.4-4.8 1.3-7.4 2.6-11.9 2.6-10.7 0-19.4-8.7-19.4-19.4s5.2-17.8 15.5-20.7c27.8-7.8 56.2-13.6 97.8-13.6 64.9 0 127.6 16.1 177 45.5 8.1 4.8 11.3 11 11.3 19.7-.1 10.8-8.5 19.5-19.4 19.5zm-26.9 65.6c-4.2 0-6.8-1.3-10.7-3.6-62.4-37.6-135-39.2-206.7-24.5-3.9 1-9 2.6-11.9 2.6-9.7 0-15.8-7.7-15.8-15.8 0-10.3 6.1-15.2 13.6-16.8 81.9-18.1 165.6-16.5 237 26.2 6.1 3.9 9.7 7.4 9.7 16.5s-7.1 15.4-15.2 15.4z"/>
      </svg>
    </div>
  </a>
</section>
<script src="../scripts/spotify-background.js"></script>
